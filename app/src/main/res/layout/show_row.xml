<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/shows_image_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/show_placeholder" />

    <TextView
        android:id="@+id/shows_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CCED1D24"
        android:gravity="center"
        android:padding="6dp"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/shows_image_iv"
        app:layout_constraintEnd_toEndOf="@+id/shows_image_iv"
        app:layout_constraintStart_toStartOf="@+id/shows_image_iv"
        tools:text="Hulk" />

</androidx.constraintlayout.widget.ConstraintLayout>